<h2 class="text-center"><%= t("devise.registrations.edit_title", resource: resource_name.to_s.humanize) %></h2>
<div class="col-md-6 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, t("users.new.label")[1] %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name, t("users.new.label")[0] %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t "devise.registrations.confirmable_massage" %> <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, t("users.new.label")[2] %> <i><%= t "devise.registrations.password_massage" %></i>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t("users.new.label")[3] %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, t("users.new.label")[4] %> <i><%= t "devise.registrations.current_password_massage" %></i><br />
      <%= f.password_field :current_password, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.registrations.update_button"), class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to t("devise.registrations.back_button"), :back, class: "btn btn-success" %>
</div>
