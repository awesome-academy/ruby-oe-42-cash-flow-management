<h1 class="text-center"><%= t "devise.passwords.edit_title" %></h1>

<div class="col-md-6 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, t("users.new.label")[2] %><br />
      <% if @minimum_password_length %>
        <em><%= t "devise.passwords.min_length", min_length: @minimum_password_length %></em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t("users.new.label")[3] %><br />
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t("devise.passwords.edit_button"), class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
